{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/deb-package-config.schema.json",
  "title": "DebPackageConfig",
  "type": "object",
  "required": ["meta", "control", "files"],
  "properties": {
    "meta": {
      "$ref": "#/$defs/PackageMeta"
    },
    "control": {
      "$ref": "#/$defs/ControlExtras"
    },
    "files": {
      "$ref": "#/$defs/DebFileSpec"
    }
  },
  "$defs": {
    "PackageMeta": {
      "type": "object",
      "required": ["name", "version", "arch"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "arch": {
          "type": "string",
          "enum": ["amd64", "arm64", "armhf", "riscv64"],
          "description": "Should match architectures from `dpkg-architecture`"
        }
      }
    },
    "ControlExtras": {
      "type": "object",
      "required": ["depends", "recommends", "section", "priority", "homepage", "maintainer", "description"],
      "properties": {
        "depends": {
          "type": "string"
        },
        "recommends": {
          "type": "string"
        },
        "section": {
          "type": "string"
        },
        "priority": {
          "type": "string"
        },
        "homepage": {
          "type": "string"
        },
        "maintainer": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "conflicts": {
          "type": "string"
        }
      }
    },
    "DebFileSpec": {
      "type": "object",
      "required": ["controlFiles", "dataFiles"],
      "properties": {
        "controlFiles": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/TarFileSpec"
          }
        },
        "dataFiles": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/TarFileSpec"
          }
        }
      }
    },
    "TarFileSpec": {
      "oneOf": [
        { "$ref": "#/$defs/TextTarFileSpec" },
        { "$ref": "#/$defs/BinaryTarFileSpec" },
        { "$ref": "#/$defs/FileTarFileSpec" },
        { "$ref": "#/$defs/UrlTarFileSpec" }
      ]
    },
    "TextTarFileSpec": {
      "type": "object",
      "required": ["path", "content"],
      "properties": {
        "type": {
          "const": "text"
        },
        "path": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "mode": {
          "type": "integer"
        }
      }
    },
    "BinaryTarFileSpec": {
      "type": "object",
      "required": ["path", "content"],
      "properties": {
        "type": {
          "const": "binary"
        },
        "path": {
          "type": "string"
        },
        "content": {
          "type": "string",
          "contentEncoding": "base64"
        },
        "mode": {
          "type": "integer"
        }
      }
    },
    "FileTarFileSpec": {
      "type": "object",
      "required": ["path", "sourcePath"],
      "properties": {
        "type": {
          "const": "file"
        },
        "path": {
          "type": "string"
        },
        "sourcePath": {
          "type": "string",
          "description": "Path to the source file on disk"
        },
        "mode": {
          "type": "integer"
        }
      }
    },
    "UrlTarFileSpec": {
      "type": "object",
      "required": ["path", "url"],
      "properties": {
        "type": {
          "const": "url"
        },
        "path": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL to fetch content from"
        },
        "bearerToken": {
          "type": "string"
        },
        "headers": {
          "type": "string",
          "description": "Optional custom HTTP headers",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "mode": {
          "type": "integer"
        }
      }
    }
  }
}
